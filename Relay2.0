                { id: "potion", name: "Potion", emoji: "ðŸ§ª", value: 30 },
                { id: "gem", name: "Gem", emoji: "ðŸ’Ž", value: 200 },
                { id: "gold", name: "Gold", emoji: "ðŸ’°", value: 50 },
                { id: "key", name: "Key", emoji: "ðŸ”‘", value: 75 },
                { id: "scroll", name: "Scroll", emoji: "ðŸ“œ", value: 90 },
                { id: "wand", name: "Wand", emoji: "ðŸª„", value: 120 },
                { id: "ring", name: "Ring", emoji: "ðŸ’", value: 150 },
                { id: "crown", name: "Crown", emoji: "ðŸ‘‘", value: 500 },
                { id: "boot", name: "Boots", emoji: "ðŸ‘¢", value: 60 },
                { id: "helmet", name: "Helmet", emoji: "ðŸª–", value: 70 }
            ],
            
            // Social spaces coordinates
            SOCIAL_SPACES: {
                CORNY_CHAT: { x: 300, y: 300, radius: 50 },
